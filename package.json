{
  "scripts": {
    "prepare": "husky",
    "install:all": "npm i && cd backend && npm run install:all",
    "test": "npm run test --prefix backend/users",
    "test:e2e": "./scripts/users-service-e2e.sh",
    "start:dev": "docker compose -f ./env-dev/docker-compose.yml up",
    "start:prod": "docker compose -f ./env-prod/docker-compose.yml up -d",
    "stop:dev": "docker compose -f ./env-dev/docker-compose.yml down",
    "stop:prod": "docker compose -f ./env-prod/docker-compose.yml down",
    "gen:env": "./scripts/generate-env.sh",
    "format:all": "cd backend && npm run format:all",
    "lint:all": "cd backend && npm run lint:all"
  },
  "engines": {
    "node": ">=22.8.0",
    "npm": ">=10.8.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.4.1",
    "@commitlint/config-conventional": "^19.4.1",
    "husky": "^9.1.5"
  }
}